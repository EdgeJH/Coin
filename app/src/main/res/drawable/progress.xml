<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <solid
                android:color="?attr/secondaryTextColor"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="5dip" />
                <gradient
                    android:startColor="@color/line20"
                    android:endColor="@color/line5"
                    android:angle="0"
                    />
            </shape>
        </clip>
    </item>

</layer-list>