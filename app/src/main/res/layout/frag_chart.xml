<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/backgroundColor"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="10dp">
                <org.angmarch.views.NiceSpinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/spinner"
                    app:textTint="?attr/primaryTextColor"
                    app:arrowTint="?attr/primaryTextColor"
                    app:backgroundSelector="@drawable/spinner_back"
                    android:textSize="17dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="?attr/primaryTextColor"
                    android:layout_alignParentStart="true"
                    android:gravity="end"
                    android:id="@+id/price"
                    android:layout_centerVertical="true"
                    tools:text="10000000"
                    android:textSize="17dp"/>
            </RelativeLayout>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="?attr/backgroundCardColor"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp"
                app:cardUseCompatPadding="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <android.support.design.widget.TabLayout
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:id="@+id/tab_layout"
                        app:tabTextColor="?attr/secondaryTextColor"
                        app:tabIndicatorColor="?attr/dividerColor"
                        app:tabSelectedTextColor="?attr/primaryTextColor"
                        app:tabIndicatorHeight="1dp"
                        app:tabTextAppearance="@style/MyCustomTabText"
                        >
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1m" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5m" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15m" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30m" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1h" />
                        <android.support.design.widget.TabItem
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4h" />

                    </android.support.design.widget.TabLayout>
                    <com.github.mikephil.charting.charts.CombinedChart
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="10dp"
                        android:id="@+id/candle" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardBackgroundColor="?attr/backgroundCardColor"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardUseCompatPadding="true">
                <com.github.mikephil.charting.charts.LineChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/rsi" />
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardBackgroundColor="?attr/backgroundCardColor"
                app:cardCornerRadius="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                app:cardUseCompatPadding="true">
                <com.github.mikephil.charting.charts.CombinedChart
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:id="@+id/obv" />
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>